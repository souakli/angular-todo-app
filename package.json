{
  "name": "angular-todo-app",
  "version": "0.0.0",
  "type": "module",
  "scripts": {
    "ng": "ng",
    "start": "ng serve",
    "build": "ng build",
    "watch": "ng build --watch --configuration development",
    "test": "ng test",
    "serve:ssr:angular-todo-app": "node dist/angular-todo-app/server/server.mjs",
    "i18n:extract": "ng extract-i18n --output-path src/locale --format=xlf",
    "i18n:upload": "powershell -File upload-translations.ps1",
    "i18n:download": "powershell -File download-translations.ps1",
    "i18n:sync": "npm run i18n:extract && npm run i18n:upload && npm run i18n:download",
    "serve:dist": "http-server dist/angular-todo-app/browser -p 8080"
  },
  "private": true,
  "dependencies": {
    "@angular/animations": "19.1.7",
    "@angular/common": "19.1.7",
    "@angular/compiler": "19.1.7",
    "@angular/core": "19.1.7",
    "@angular/forms": "19.1.7",
    "@angular/platform-browser": "19.1.7",
    "@angular/platform-browser-dynamic": "19.1.7",
    "@angular/platform-server": "19.1.7",
    "@angular/router": "19.1.7",
    "@angular/ssr": "19.1.8",
    "@lokalise/node-api": "^13.2.1",
    "express": "^4.18.2",
    "http-server": "^14.1.1",
    "rxjs": "~7.8.0",
    "tslib": "^2.3.0",
    "unzipper": "^0.12.3",
    "zone.js": "~0.15.0"
  },
  "devDependencies": {
    "@angular-devkit/build-angular": "19.1.7",
    "@angular/cli": "19.1.7",
    "@angular/compiler-cli": "19.1.7",
    "@angular/localize": "19.1.7",
    "@types/express": "^4.17.17",
    "@types/jasmine": "~4.3.0",
    "@types/node": "^18.18.0",
    "jasmine-core": "~4.6.0",
    "karma": "~6.4.0",
    "karma-chrome-launcher": "~3.2.0",
    "karma-coverage": "~2.2.0",
    "karma-jasmine": "~5.1.0",
    "karma-jasmine-html-reporter": "~2.1.0",
    "typescript": "~5.5.0"
  }
}
